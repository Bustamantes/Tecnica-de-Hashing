class HashTable:
    def __init__(self, size=101):
        """Crea una tabla hash con manejo de colisiones por encadenamiento."""
        self.size = size
        self.table = [[] for _ in range(self.size)]

    def _hash(self, key):
        """Función hash robusta basada en el algoritmo djb2."""
        hash_value = 5381
        for char in str(key):
            hash_value = ((hash_value << 5) + hash_value) + ord(char)
        return hash_value % self.size

    def insert(self, key, value):
        """Inserta un nuevo valor en la tabla hash o actualiza si existe."""
        idx = self._hash(key)
        for i, (k, v) in enumerate(self.table[idx]):
            if k == key:
                self.table[idx][i] = (key, value)  # Update existing
                return
        self.table[idx].append((key, value))  # Collision handled by chaining

    def get(self, key):
        """Obtiene el valor asociado a una clave, retorna None si no existe."""
        idx = self._hash(key)
        for (k, v) in self.table[idx]:
            if k == key:
                return v
        return None

    def delete(self, key):
        """Elimina una clave y su valor asociado, si existe."""
        idx = self._hash(key)
        for i, (k, _) in enumerate(self.table[idx]):
            if k == key:
                del self.table[idx][i]
                return True
        return False

    def __str__(self):
        """Representación amigable de la tabla."""
        items = []
        for bucket in self.table:
            items.extend(bucket)
        return "{" + ", ".join(f"{k}: {v}" for k, v in items) + "}"

if __name__ == "__main__":
    # Ejemplo de uso
    ht = HashTable()
    ht.insert("nombre", "Juan")
    ht.insert("edad", 25)
    ht.insert("email", "juan@mail.com")

    print("Tabla hash:", ht)
    print("Obteniendo 'email':", ht.get("email"))
    ht.delete("edad")
    print("Tabla después de eliminar 'edad':", ht)
